<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_addpost_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:layout_margin="20dp"
        android:hint="@string/add_post_title_hint"/>
    <EditText
        android:id="@+id/et_addpost_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:layout_margin="20dp"
        android:hint="@string/add_post_message_hint"/>

    <CheckBox
        android:id="@+id/cb_addpost_avaiable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:checked="true"/>

    <Button
        android:id="@+id/btn_addpost_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add picture"/>
</LinearLayout>